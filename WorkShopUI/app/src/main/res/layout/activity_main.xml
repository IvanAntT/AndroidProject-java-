<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.johny.workshopui.MainActivity">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/tabs_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <fragment
        android:id="@+id/fragNutrition"
        android:name="com.example.johny.workshopui.TabsFragmet.Nutrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <fragment
        android:id="@+id/fragFavorite"
        android:name="com.example.johny.workshopui.TabsFragmet.Favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <fragment
        android:id="@+id/fragNutriCalc"
        android:name="com.example.johny.workshopui.TabsFragmet.NutriCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
